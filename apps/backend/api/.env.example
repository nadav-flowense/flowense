SERVER_AUTH_SECRET=please_change_this_in_production
SERVER_POSTGRES_URL=postgres://postgres:postgres@localhost:5431/postgres
SERVER_HOST=localhost
SERVER_PORT=3035

# Backend URL, used to configure OpenAPI (Scalar)
PUBLIC_SERVER_URL=http://localhost:3035
PUBLIC_SERVER_API_PATH=/api

# Frontend URL, used to configure trusted origin (cors)
PUBLIC_PLATFORM_URL=http://localhost:8085
PUBLIC_BACKOFFICE_URL=http://localhost:8086

# Stripe Configuration (optional - leave empty to disable Stripe integration)
# Get these from your Stripe Dashboard: https://dashboard.stripe.com/test/apikeys
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# Stripe Price IDs for subscription plans
# Create these in Stripe Dashboard: https://dashboard.stripe.com/test/products
# Free plan: $0/month price
STRIPE_FREE_PRICE_ID=
# Starter plan: monthly and annual prices
STRIPE_STARTER_PRICE_ID=
STRIPE_STARTER_ANNUAL_PRICE_ID=
# Pro plan: monthly and annual prices
STRIPE_PRO_PRICE_ID=
STRIPE_PRO_ANNUAL_PRICE_ID=
# Enterprise plan (optional)
STRIPE_ENTERPRISE_PRICE_ID=
