{
  "name": "@repo/ui",
  "private": true,
  "type": "module",
  "files": [
    "dist"
  ],
  "imports": {
    "#*": "./src/*"
  },
  "exports": {
    "./lib/*": {
      "types": "./dist/src/lib/*.d.ts",
      "default": "./src/lib/*.ts"
    },
    "./hooks/*": {
      "types": "./dist/src/hooks/*.d.ts",
      "default": "./src/hooks/*.ts"
    },
    "./components/*": {
      "types": "./dist/src/components/*.d.ts",
      "default": "./src/components/*.tsx"
    },
    "./components/auth": {
      "types": "./dist/src/components/auth/index.d.ts",
      "default": "./src/components/auth/index.ts"
    },
    "./components/organization": {
      "types": "./dist/src/components/organization/index.d.ts",
      "default": "./src/components/organization/index.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "clean": "git clean -xdf .cache .nx dist node_modules",
    "dev": "tsc",
    "format": "biome format ./src",
    "lint": "biome lint ./src",
    "postui-add": "biome format src --write",
    "typecheck": "tsc --noEmit --emitDeclarationOnly false",
    "ui-add": "pnpm dlx shadcn@latest add"
  },
  "dependencies": {
    "@radix-ui/react-avatar": "catalog:",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-dialog": "catalog:",
    "@radix-ui/react-dropdown-menu": "catalog:",
    "@radix-ui/react-icons": "catalog:",
    "@radix-ui/react-label": "catalog:",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slot": "catalog:",
    "@radix-ui/react-toast": "catalog:",
    "@radix-ui/react-tooltip": "catalog:",
    "@tabler/icons-react": "catalog:",
    "class-variance-authority": "catalog:",
    "cmdk": "^1.1.1",
    "input-otp": "catalog:",
    "lucide-react": "catalog:",
    "next-themes": "catalog:",
    "radix-ui": "catalog:",
    "sonner": "catalog:",
    "tailwind-merge": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@repo/tailwind-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@types/react": "catalog:",
    "react": "catalog:",
    "typescript": "catalog:"
  },
  "peerDependencies": {
    "@tanstack/react-form": "catalog:",
    "react": "catalog:"
  }
}
